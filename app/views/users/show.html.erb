<%= @user.username %>

<h2>Comments</h2>

<% @user.comments.each do |comment| %>
<%= comment.content %>
<% end %>

<h3>Add Comment</h3>


<form id="user_comment" action="<%= comments_url %>" method="post">
  Content:
  <input type="text" name="comment[content]" id='content' value="">

  <input type="submit" name="Submit Comment" value="Submit Comment">

  <%= render 'layouts/token' %>
  <input type="hidden" name="comment[commentable_id]" value="<%= @user.id %>">
  <input type="hidden" name="comment[commentable_type]" value="<%= @user.class.to_s %>">
</form>
